{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      },
  

      {
        "src": "api/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "api/vercel.js" },

      { "src": "/(.*)",      "dest": "client/$1" }
    ]
  }
  